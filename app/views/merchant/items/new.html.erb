<div class="">
  <h1 class="little_esty_shop">Little Esty Shop</h1>
</div>

<div class="nav_bar_wrapper">
  <h1 class="title_name"><%= @merchant.name %></h1>
  <div class="nav_bar_links">
    <p class="nav_bar_links_inline"><%= button_to "Dashboard", "/merchants/#{@merchant.id}/dashboard", method: :get %></p>
    <p class="nav_bar_links_inline"><%= button_to "My Items", "/merchants/#{@merchant.id}/items", method: :get %></p>
    <p class="nav_bar_links_inline"><%= button_to "My Invoices", "/merchants/#{@merchant.id}/invoices", method: :get %></p>
  </div>
</div>

<h2 class="title_wrapper">Add a New Item:</h2>
<%= form_with url: "/merchants/#{@merchant.id}/items", method: :post, local: true do |form| %>
   <%= form.label :name %>
   <%= form.text_field :name %><br/><br/>

   <%= form.label :description %>
   <%= form.text_field :description %><br/><br/>

   <%= form.label :unit_price %>
   <%= form.text_field :unit_price %><br/><br/>

   <%= form.label :merchant_id, style: "display:none;"  %>
   <%= form.text_field :merchant_id, value: "#{@merchant.id}", style: "display:none;" %><br/>

   <%= form.label :status, style: "display:none;"  %>
   <%= form.text_field :status, value: "disable", style: "display:none;" %><br/>

   <%= form.submit "Submit"%>
<% end %>
